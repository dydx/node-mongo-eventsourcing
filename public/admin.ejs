<body>
    <h1>Admin</h1>
    <a href="/order">Create Order</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Confirmed</th>
                <th>Confirm Order</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(function(order) { %>
                <tr>
                    <td>
                        <%= order.orderId %>
                    </td>
                    <td>
                        <%= order.firstName%>
                    </td>
                    <td>
                        <%= order.lastName %>
                    </td>
                    <td>
                        <%= order.email %>
                    </td>
                    <td>
                        <%= order.isConfirmed + "" %>
                    </td>
                    <td>
                        <a href="/confirm?id=<%= order.orderId %>">Confirm</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <h2>History</h2>
    <ul>
        <% events.forEach(function (event) { %>
            <li>
                <%= event.type %> -
                    <%= JSON.stringify({ data: event.data, orderId: event.orderId}, null, 4) %>
            </li>
        <% }); %>
    </ul>
</body>
